<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontPickInStoreNavigateToSelectStoreActionGroup">
        <annotations>
            <description>Click 'Select Store' button in store pickup tab</description>
        </annotations>
        <waitForElementClickable selector="{{StorefrontSelectStoreSection.selectStoreBtn}}" stepKey="waitForSelectStoreClickable" />
        <click selector="{{StorefrontSelectStoreSection.selectStoreBtn}}" stepKey="clickSelectStoreBtn"/>
        <waitForPageLoad stepKey="waitForModalWindow"/>
    </actionGroup>
</actionGroups>
