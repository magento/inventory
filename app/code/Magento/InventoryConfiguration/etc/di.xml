<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- IsSalableCondition -->
    <type name="Magento\Inventory\Model\ResourceModel\IsSalableCondition\GetStockConditionChain">
        <arguments>
            <argument name="getIsSalableConditions" xsi:type="array">
                <item name="manage_stock"
                      xsi:type="object"
                >Magento\InventoryConfiguration\Model\ResourceModel\IsSalableCondition\GetManageStockCondition</item>
                <!-- override source_item_status condition due to min_qty condition includes first (need to for proper work of chain) -->
                <item name="source_item_status"
                      xsi:type="object"
                >Magento\InventoryConfiguration\Model\ResourceModel\IsSalableCondition\GetMinQtyStockCondition</item>
            </argument>
        </arguments>
    </type>
    <preference for="Magento\InventoryConfiguration\Model\StockConfigurationInterface"
                type="Magento\InventoryConfiguration\Model\StockConfigurationValidator"/>

    <type name="Magento\Inventory\Model\StockSourceLink\Validator\ValidatorChain">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="default_source" xsi:type="object">Magento\InventoryCatalog\Model\StockSourceLink\Validator\AssignDefaultSourceToNonDefaultStockValidator</item>
                <item name="default_stock" xsi:type="object">Magento\InventoryCatalog\Model\StockSourceLink\Validator\AssignNonDefaultSourceToDefaultStockValidator</item>
            </argument>
        </arguments>
    </type>
</config>
